<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:background="@drawable/background_item_activities"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_item"
            app:layout_constraintStart_toEndOf="@id/iv_item"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:textSize="16sp"
            android:textColor="@color/text_color"
            android:ellipsize="end"
            tools:text="추천 공모전 이름"/>

        <TextView
            android:id="@+id/tv_activity_tag"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@drawable/badge_tag"
            app:layout_constraintTop_toBottomOf="@id/tv_activity_name"
            app:layout_constraintStart_toStartOf="@id/tv_activity_name"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            tools:text="#tagtagtag"
            android:maxLength="8"
            android:ellipsize="end"
            android:textSize="12sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
